<div id="home-hero" class="hero-unit" style="background: url('/assets/chronical_small.jpg') no-repeat;-webkit-background-size: cover; /*for webKit*/
        -moz-background-size: cover; /*Mozilla*/
        -o-background-size: cover; /*opera*/
        background-size: cover; /*generic*/">
	<div class="row">
		<div class="hero-unit span2 offset1" style="background:rgba(255,255,255,0.8);margin-bottom:0px;width:285px">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			  <div><%= f.label :email %><br />
			  <%= f.email_field :email %></div>

			  <div><%= f.label :password %><br />
			  <%= f.password_field :password %></div>

			  <% if devise_mapping.rememberable? -%>
			  <div><%= f.check_box :remember_me %>  Remember me</div>
			  <% end -%>

			  <div><%= f.submit "Sign in", class: "btn btn-large btn-primary" %></div>
			<% end %>

			<%= render "devise/shared/links" %>
		</div>
	</div>
</div>