<h2><%= t "devise.invitations.new.header" %></h2>
<div class="formcenter">
<%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
  <%= devise_error_messages! %>

<% resource.class.invite_key_fields.each do |field| -%>
<div><%= f.label :first_name %><br />
<%= f.text_field :first_name %></div>

<div><%= f.label :last_name %><br />
<%= f.text_field :last_name %></div>

<p><%= f.label field %><br />
<%= f.text_field field, :style => "margin-bottom:0px; padding-bottom:0px" %></p>
	
<div><%= f.label :phone %><br />
<%= f.text_field :phone %></div>

<div><%= f.label :image %> <i>(Profile Picture)</i><br />
<i class="icon-user" style="color:gray;font-size:40px"></i>
<%= f.file_field :image %></div>

	<%= f.fields_for :memberships do |builder| %>
		<%= render "shared/membership_fields", :f => builder %>
	<% end %>

<% end %>

  <div><%= f.submit "Add user to project", class: "btn btn-large btn-primary" %></div>
<% end %>
</div>