<div class="fields">
	<div class="row-fluid">
	<h3><%= link_to_remove_fields raw("<i class='icon-minus'></i> Remove Milestone"), f %></h3><br />
	</div>
	<div class="row-fluid">
		<div class="span6">
			<%= f.label :name, "Name" %>
			<%= f.text_field :name %>
		</div>
		<div class="span6">
			<%= f.label :date, "Date" %>
			<%= f.text_field :date, class: "milestones1" %>
		</div>
	</div>
</div>

<script type="text/javascript">	
	$("[class~='milestones1']").datepicker({
		"format": "yyyy-mm-dd",
	    "weekStart": 1,
	    "autoclose": true
	});	
</script>